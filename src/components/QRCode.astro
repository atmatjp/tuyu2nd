---
import QRCode from "qrcode";

const { url } = Astro.props;

// Base64でQRコード画像を生成
const qrImage = await QRCode.toDataURL(url, {
  errorCorrectionLevel: "M",
  margin: 1,
  width: 200,
});
---

<img
  src={qrImage}
  alt="QR code for {url}"
  width="150"
  height="150"
  loading="lazy"
/>
<style>
  img {
    border-radius: 10px;
  }
</style>
